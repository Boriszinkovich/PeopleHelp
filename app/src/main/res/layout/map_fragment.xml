<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="350dp"
        android:id="@+id/button_non_created_container"
        android:background="#8d4c75ff"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Ищу"
            android:id="@+id/buttonHelp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="#ff88fc5e"
            android:textColor="@color/button_material_dark"
            android:textSize="20sp"
             />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Sos"
            android:id="@+id/buttonSos"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="#ffff2929"
            android:textColor="@color/background_material_dark"
            android:textSize="20sp"
            android:textStyle="italic"
            android:theme="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_alignBottom="@+id/saveHelpButton"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="350dp"
        android:id="@+id/button_sos_created_container"
        android:background="#8d4c75ff"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/buttonCancelSos"
            android:background="#ffffa53e"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="69dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать"
            android:id="@+id/buttonRedactSos"
            android:background="#ffffa53e"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignTop="@+id/buttonCancelSos"
            android:layout_toLeftOf="@+id/buttonCancelSos"
            android:layout_toStartOf="@+id/buttonCancelSos" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="350dp"
        android:id="@+id/button_help_created_container"
        android:background="#8d4c75ff"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="Отменить"
            android:id="@+id/buttonCancelHelp"
            android:background="#ff9cff8e"
            android:layout_alignBottom="@+id/buttonSosCreate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Редактировать"
            android:id="@+id/buttonResetHelp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/buttonCancelHelp"
            android:layout_alignStart="@+id/buttonCancelHelp"
            android:layout_marginTop="20dp"
            android:background="#ffa3ff83" />

        <Button
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="SOS"
            android:id="@+id/buttonSosCreate"
            android:layout_alignTop="@+id/buttonResetHelp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="#ffff5d54" />
    </RelativeLayout>




</RelativeLayout>